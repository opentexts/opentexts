/* Buttons */
.button-primary,
body #doorbell-button,
#doorbell #doorbell-form .buttons button {
    @apply py-3 px-16 rounded-md bg-blue-800 text-gray-100 cursor-pointer;
    transition: all 200ms ease-in-out;
}

.button-primary:hover,
body #doorbell-button:hover,
#doorbell #doorbell-form .buttons button:hover {
    @apply bg-red-700;
}

.button-primary:focus,
body #doorbell-button:focus,
#doorbell #doorbell-form .buttons button:focus {
    @apply outline-none shadow-focus;
}
